{
    "app_name": "TP_NFC",
    "version": "0.1.0",
    "log_level": "INFO",
    "log_file": "logs/TP_NFC.log",
    "nfc": {
        "reader_timeout": 5,
        "auto_connect": true,
        "beep_on_scan": true
    },
    "google_sheets": {
        "spreadsheet_id": "YOUR_SPREADSHEET_ID_HERE",
        "credentials_file": "config/credentials.json",
        "token_file": "config/token.json",
        "scopes": ["https://www.googleapis.com/auth/spreadsheets"],
        "sheet_name": "Sheet1"
    },
    "stations": [
        "Reception",
        "Lio",
        "Juntos",
        "Experimental",
        "Unvrs"
    ],
    "ui": {
        "window_title": "TP NFC Attendance System",
        "window_width": 600,
        "window_height": 500,
        "theme": "dark-blue"
    }
}